<Window x:Class="MiniMarket.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniMarket.WPF"
        mc:Ignorable="d"
        Title="MiniMarket Manager" Height="500" Width="800">
	<Grid>
		<StackPanel Margin="10">
			<TextBlock Text="Lista Produktów z API" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

			<Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
				<StackPanel>
					<TextBlock Text="Dodaj nowy produkt:" FontWeight="Bold" Margin="0,0,0,5"/>
					<TextBox x:Name="NameInput"  Text="Nazwa produktu" Margin="0,0,0,5"/>
					<TextBox x:Name="PriceInput" Text="10.00" Margin="0,0,0,5"/>
					<TextBox x:Name="CategoryInput" Text="Kategoria" Margin="0,0,0,5"/>
					<Button Content="Dodaj Produkt" Click="AddButton_Click" Height="25"/>
				</StackPanel>
			</Border>

			<Grid Margin="0,0,0,10">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="10"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Button Grid.Column="0" x:Name="LoadButton" Content="Odśwież" Click="LoadButton_Click" Height="30"/>

				<Button Grid.Column="2" Content="Usuń Zaznaczony" Click="DeleteSelected_Click" Height="30" Background="IndianRed" Foreground="White"/>

				<Button Grid.Column="4" Content="RABAT 10% (SQL)" Click="DiscountButton_Click" Height="30" Background="LightGreen"/>
			</Grid>

			<DataGrid x:Name="ProductsGrid" AutoGenerateColumns="False" Height="250" SelectionMode="Single">
				<DataGrid.Columns>
					<DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*" />
					<DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="2*" />
					<DataGridTextColumn Header="Cena" Binding="{Binding Price, StringFormat=N2}" Width="Auto" />
					<DataGridTextColumn Header="Kategoria" Binding="{Binding Category}" Width="*" />
				</DataGrid.Columns>
			</DataGrid>
		</StackPanel>
	</Grid>
</Window>